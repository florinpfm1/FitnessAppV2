@model FitnessApp2.Models.ViewModels.InstructorViewModel

@{
    ViewData["Title"] = "Create Instructor";
    var errorMessage = TempData["errorMessage"]?.ToString();
}

<h3>@ViewData["Title"]</h3>
<hr />
<!-- *********** temp messages for 5s *************** -->
@if (!string.IsNullOrWhiteSpace(errorMessage))
{
    <div class="alert alert-danger">
        <strong>Error! </strong>@errorMessage
        <button type="button" class="btn-close float-end" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<form asp-controller="Instructor" asp-action="CreateInstructor" method="post">
    <div class="mb-3">
        <label class="form-label">First Name</label>
        <input type="text" class="form-control" asp-for="FirstName" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Last Name</label>
        <input type="text" class="form-control" asp-for="LastName" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Date Added</label>
        <input type="date" class="form-control" asp-for="AddedDate" />
        <span asp-validation-for="AddedDate" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Years Experience</label>
        <input type="text" class="form-control" asp-for="ExperienceYears" />
        <span asp-validation-for="ExperienceYears" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Gender</label>
        <input type="text" class="form-control" asp-for="Gender" />
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>
    <div class="d-grid">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>
<div class="mt-3">
    <a class="btn btn-dark text-white text-decoration-none" asp-area="" asp-controller="Instructor" asp-action="GetInstructors">Back to main</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
