@using FitnessApp2.Models.DbEntities

@model FitnessApp2.Models.ViewModels.GuestViewModel

@{
    ViewData["Title"] = "Create Guest";
    //var allSections = ViewData["allSections"] as List<Section>;
    var errorMessage = TempData["errorMessage"]?.ToString();
}

<h3>@ViewData["Title"]</h3>
<hr />
<!-- *********** SERVER SIDE VALIDATION *************** -->
@if (!string.IsNullOrWhiteSpace(errorMessage))
{
    <div class="alert alert-danger">
        <strong>Error! </strong>@errorMessage
        <button type="button" class="btn-close float-end" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>

}
<form action="CreateGuest" method="post">
    <div class="mb-3">
        <label class="form-label">First Name</label>
        <input type="text" class="form-control" asp-for="FirstName" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Last Name</label>
        <input type="text" class="form-control" asp-for="LastName" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Date Added</label>
        <input type="date" class="form-control" asp-for="AddedDate" />
        <span asp-validation-for="AddedDate" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Hours</label>
        <input type="text" class="form-control" asp-for="Hours" />
        <span asp-validation-for="Hours" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Section Name</label>
        <input type="text" class="form-control" asp-for="SectionName" />
        <span asp-validation-for="SectionName" class="text-danger"></span>
    </div>
    @*
    <div>
        <label class="form-label">Section Name</label>
        <select class="form-select" asp-for="SectionName">
            <option selected>Open this select menu</option>
            @foreach (var item in allSections)
            {
                <option>@item.Name</option>
            }
        </select>
    </div>
    *@
    <div class="d-grid">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>
<!-- *********** CLIENT SIDE VALIDATION *************** -->
<!-- aici facem legatura cu scripturi de client side validation pt instructor data care vine de la forms din webpage fields -->
<!-- momentan e comentata pt ca vreau sa fac doar server side validation -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
