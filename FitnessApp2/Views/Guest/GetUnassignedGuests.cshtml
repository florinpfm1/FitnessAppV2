<form>
    <table class="table table-responsive table-hover">
        <thead>
            <tr class="table-active">
                <th class="text-center">Id</th>
                <th class="text-center">FirstName</th>
                <th class="text-center">LastName</th>
                <th class="text-center">Hours</th>
                <th class="text-center">Email</th>
                <th class="text-center">Phone</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var waitlistGuest in Model)
                {
                    <tr>
                        <td class="text-center">@waitlistGuest.Id</td>
                        <td class="text-center">@waitlistGuest.FirstName</td>
                        <td class="text-center">@waitlistGuest.LastName</td>
                        <td class="text-center">@waitlistGuest.Hours</td>
                        <td class="text-center">@waitlistGuest.Email</td>
                        <td class="text-center">@waitlistGuest.Phone</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6">
                        <div>
                            No Guests are present in the waitlist!
                        </div>
                    </td>
                </tr>
            }


        </tbody>
    </table>
</form>


